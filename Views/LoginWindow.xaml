<Window x:Class="TODO_app.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODO_app.Views"
        mc:Ignorable="d"
        Title="LoginWindow" Height="400" Width="300" Background="#F0F4F8">
    <Grid>

        <TextBlock HorizontalAlignment="Center" Margin="0,24,0,0" TextWrapping="Wrap" Text="Logowanie" VerticalAlignment="Top" FontSize="35"
                   FontFamily="Artifakt Element Heavy" Foreground="#2E3A59"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,89,0,0" TextWrapping="Wrap" Text="Nazwa użytkownika" VerticalAlignment="Top" FontSize="20" FontFamily="Artifakt Element Black" Foreground="#2E3A59"/>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="20" Margin="0,127,0,0" FontFamily="Artifakt Element Medium" Background="#FFFFFF" BorderBrush="#B2B2B2" BorderThickness="1"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,166,0,0" TextWrapping="Wrap" Text="Hasło" VerticalAlignment="Top" FontSize="20" FontFamily="Artifakt Element Black" Foreground="#2E3A59"/>
        <TextBox HorizontalAlignment="Center" Margin="0,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" FontSize="20" FontFamily="Artifakt Element Medium" Background="#FFFFFF" BorderBrush="#B2B2B2" BorderThickness="1"/>
        <Button Content="Zaloguj" HorizontalAlignment="Center" Margin="0,274,0,0" VerticalAlignment="Top" FontSize="20" Width="150" Height="50" FontFamily="Artifakt Element Black" Background="#4A90E2" Foreground="#FFFFFF"/>
    </Grid>
</Window>
